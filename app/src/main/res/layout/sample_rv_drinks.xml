<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_10dp"
    android:layout_gravity="right"
    android:background="@color/white"
    android:paddingBottom="@dimen/padding_5dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_image_drink"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_et"
        android:layout_marginTop="@dimen/margin_15dp"
        android:layout_marginRight="@dimen/margin_15dp"
        app:layout_constraintHeight_percent="0.65"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.4">


        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_drink"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:riv_corner_radius="8dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_name_drink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_15dp"
        android:textColor="@color/white"
        android:textSize="@dimen/font_14sp"
        android:paddingBottom="@dimen/padding_5dp"
        app:layout_constraintRight_toRightOf="@id/cl_image_drink"
        app:layout_constraintLeft_toLeftOf="@id/cl_image_drink"
        app:layout_constraintTop_toBottomOf="@id/cl_image_drink" />


    <TextView
        android:id="@+id/tv_category_drink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_15dp"
        android:layout_marginRight="@dimen/margin_15dp"
        android:textColor="@color/white"
        android:textSize="@dimen/font_13sp"
        android:layout_marginLeft="@dimen/margin_20dp"
        app:layout_constraintTop_toTopOf="@id/cl_image_drink"
        app:layout_constraintRight_toLeftOf="@id/cl_image_drink"/>

    <TextView
        android:id="@+id/tv_alcoholic_drink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10dp"
        android:textColor="@color/green_logo"
        android:textSize="@dimen/font_13sp"
        app:layout_constraintTop_toBottomOf="@id/tv_category_drink"
        app:layout_constraintLeft_toLeftOf="@id/tv_category_drink"/>

</androidx.constraintlayout.widget.ConstraintLayout>




